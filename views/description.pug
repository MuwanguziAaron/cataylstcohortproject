            p +1 5589 55488 55s
      .col-lg-5.col-md-8
        .form
          form.php-email-form(action='forms/contact.php' method='post' role='form')
            .row
              .form-group.col-lg-6
                input#name.form-control(type='text' name='name' placeholder='Your Name' data-rule='minlen:4' data-msg='Please enter at least 4 chars')
              .form-group.col-lg-6.mt-3.mt-lg-0
                input#email.form-control(type='email' name='email' placeholder='Your Email' data-rule='email' data-msg='Please enter a valid email')
            .form-group.mt-3
              input#subject.form-control(type='text' name='subject' placeholder='Subject' data-rule='minlen:4' data-msg='Please enter at least 8 chars of subject')
            .form-group.mt-3
              textarea.form-control(name='message' rows='5' placeholder='Message' required='')
            .my-3
              .loading Loading
              .error-message
              .sent-message Your message has been sent. Thank you!
            .text-center
              button(type='submit' title='Send Message') Send Message
